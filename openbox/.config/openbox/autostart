xrandr --output DisplayPort-0 --mode 1920x1080 --rate 240

# basic applications
xset -b        &
~/.fehbg       &
picom -b       &
opensnap -d    &
lxqt-policykit-agent        &
G_SLICE=always-malloc tint2 &

(mpc clear && mpc load main && mpc shuffle) &

# tray applications
(sleep 1s && volumeicon)    &
(sleep 1s && nm-applet)     &
(sleep 1s && steam -silent) &
(sleep 1s && discord --start-minimized) &
(sleep 1s && setxkbmap -option "shift:both_capslock") &
