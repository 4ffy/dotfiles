# basic applications
xset -b        &
~/.fehbg       &
picom -b       &
opensnap -d    &
lxqt-policykit-agent    &
G_SLICE=always-malloc \
    tint2 -c "${XDG_CONFIG_HOME:-$HOME/.config}/openbox/tint2rc" &

(mpc clear && mpc load main && mpc shuffle) &

# tray applications
(sleep 1s && volumeicon) &
(sleep 1s && nm-applet)  &
(sleep 1s && cbatticon)  &
(sleep 1s && setxkbmap -option "shift:both_capslock") &
