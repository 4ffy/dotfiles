#!/bin/bash
set -uo pipefail

for arg in "$@"; do
    [[ "$arg" == '-h' || "$arg" == '--help' ]] && cat << EOF >&2 && exit
Usage: bmp2png DIRECTORY
Recursively convert all BMP images to PNG in a directory tree.
EOF
done

dir=${1:-}
if [ -z "$dir" ] || [ ! -d "$dir" ]; then
    echo "Directory not found: '$dir'" >&2
    exit 1
fi

cd "$dir" || exit
find . -name "*.[Bb][Mm][Pp]" | parallel magick "{}" "{.}.png"
find . -name "*.[Pp][Nn][Gg]" | parallel rm -fv "{.}.[Bb][Mm][Pp]"
